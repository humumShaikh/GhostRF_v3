    oled.display();
    pinMode(13,OUTPUT);
    pinMode(14,OUTPUT);
    pinMode(26,OUTPUT);
    pinMode(27,OUTPUT);
    digitalWrite(13,HIGH);
    digitalWrite(14,LOW);
    digitalWrite(26,HIGH);
    digitalWrite(27,LOW);
    counter++;
    preferences.putUInt("counter", counter);
  }

  else if((counter%2)!=0){
    oled.drawBitmap(0,0,NRF_Operating_2,128,64,SH110X_WHITE);
    oled.display();
    pinMode(13,OUTPUT);
    pinMode(14,OUTPUT);
    pinMode(26,OUTPUT);
    pinMode(27,OUTPUT);
    digitalWrite(13,LOW);
    digitalWrite(14,HIGH);
    digitalWrite(26,LOW);
    digitalWrite(27,HIGH);
    counter++;
    preferences.putUInt("counter", counter);
  }
  preferences.end();
  initHP();
}


